---
import Layout from '../layouts/Layout.astro';
import TemplateCard from '../components/TemplateCard.astro';
import { ViewTransitions } from 'astro:transitions';

// Fetch the JSON data at build time
const response = await fetch(
  'https://raw.githubusercontent.com/coollabsio/coolify/refs/heads/main/templates/service-templates.json'
);
const templates = await response.json();

// Fetch the version information
const versionResponse = await fetch('https://cdn.coollabs.io/coolify/versions.json');
const versionData = await versionResponse.json();

// Convert the object to an array of templates
const templateArray = Object.entries(templates).map(([key, value]) => ({
  name: key,
  ...value,
}));
---

<Layout title="Coolify Service Templates">
  <ViewTransitions />
  <main>
    <h1>
      Coolify Service Templates
      <span class="subtitle">unofficial list</span>
    </h1>
    <pre class="version-info">Current Coolify Version: {versionData.coolify.v4.version}</pre>
    <div id="selected-tags" class="selected-tags"></div>
    <div id="items-counter" class="items-counter">
      Showing all {templateArray.length} items
    </div>
    <div class="templates">
      {
        templateArray.map((template) => (
          <TemplateCard
            name={template.name}
            logo={template.logo}
            slogan={template.slogan}
            type={template.type}
            tags={template.tags}
            documentation={template.documentation}
          />
        ))
      }
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 1000px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 16px;
    line-height: 1.6;
  }
  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 1em;
    color: rgb(var(--accent-light));
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  .subtitle {
    font-size: 1rem;
    font-weight: normal;
    color: rgba(var(--accent-light), 0.7);
    font-style: italic;
  }
  .version-info {
    text-align: center;
    margin-bottom: 2rem;
    padding: 0.5rem;
    background: rgba(var(--accent), 0.1);
  }
  .selected-tags {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    min-height: 2rem;
    border-radius: 4px;
    font-family: monospace;
  }
  .items-counter {
    text-align: right;
    color: #ccc;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    font-family: monospace;
  }
  .filter-label {
    color: #ccc;
    font-size: 0.9rem;
  }
  .templates {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
